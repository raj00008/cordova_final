<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.raj00008.myapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>Details</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icon/android/icon-36.png" />
    <icon density="mdpi" src="res/icon/android/icon-48.png" />
    <icon density="hdpi" src="res/icon/android/icon-72.png" />
    <icon density="xhdpi" src="res/icon/android/icon-96.png" />
    <icon density="xxhdpi" src="res/icon/android/icon-144.png" />
    <icon density="xxxhdpi" src="res/icon/android/icon-192.png" />
    <splash density="land-hdpi" src="res/screen/android/icon-land-hdpi-screen.png" />
    <splash density="land-ldpi" src="res/screen/android/icon-land-ldpi-screen.png" />
    <splash density="land-mdpi" src="res/screen/android/icon-land-mdpi-screen.png" />
    <splash density="land-xhdpi" src="res/screen/android/icon-land-xhdpi-screen.png" />
    <splash density="port-hdpi" src="res/screen/android/icon-port-hdpi-screen.png" />
    <splash density="port-ldpi" src="res/screen/android/icon-port-ldpi-screen.png" />
    <splash density="port-mdpi" src="res/screen/android/icon-port-mdpi-screen.png" />
    <splash density="port-xhdpi" src="res/screen/android/icon-port-xhdpi-screen.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
